<div class="col-lg-3 col-sm-6 col-md-4 col-xs-12 ">
    <div class="search-container result-div" >
        <div class="rid-button" index="{{index}}">description</div>
        <div class="remove-button" index="{{index}}" id="{{id}}">X</div>
        <div class="search-image-container">
            <img src="{{imageLink}}" alt="book cover" class="img-responsive">
        </div>
        <div style="display: none">{{description}}</div>
        <div class="info-container">
            <h4>{{title}}</h4>
            {{#each authors}}
                <h5>{{this}}</h5>
            {{/each}}
        </div>
    </div>
</div>